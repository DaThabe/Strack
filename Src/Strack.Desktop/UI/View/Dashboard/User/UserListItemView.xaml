<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:user="clr-namespace:Strack.Desktop.ViewModel.View.Dashboard.User"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">

    <DataTemplate x:Key="UserListItem" DataType="{x:Type user:IUserListItem}">

        <DockPanel>

            <!--  头像  -->
            <wpfui:Image
                Width="28"
                Height="28"
                CornerRadius="5"
                DockPanel.Dock="Left"
                Source="{Binding Avatar}" />

            <!--  更多  -->
            <Button
                Margin="5,0,0,0"
                Padding="0"
                BorderThickness="0"
                Command="{Binding ClickMoreCommand}"
                DockPanel.Dock="Right">
                <wpfui:SymbolIcon Symbol="MoreVertical24" />
            </Button>

            <!--  文本  -->
            <StackPanel Margin="5,0,0,0" VerticalAlignment="Center">

                <!--  名称  -->
                <wpfui:TextBlock FontTypography="BodyStrong" Text="{Binding Name}" />

                <!--  来源  -->
                <wpfui:TextBlock
                    Appearance="Disabled"
                    FontTypography="Caption"
                    Text="{Binding Source}" />

            </StackPanel>


        </DockPanel>

    </DataTemplate>

</ResourceDictionary>