<UserControl
    x:Class="Strack.Desktop.UI.View.Activity.ActivityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:element="clr-namespace:Strack.Desktop.UI.View.Activity.Element"
    xmlns:local="clr-namespace:Strack.Desktop.UI.View.Activity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d">

    <UserControl.Resources />

    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=9}">

        <ItemsControl.ItemTemplate>
            <DataTemplate>

                <element:InfoCardView />

            </DataTemplate>
        </ItemsControl.ItemTemplate>

        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>

                <wpfui:VirtualizingWrapPanel />

            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.Template>
            <ControlTemplate>

                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsPresenter />
                </ScrollViewer>

            </ControlTemplate>
        </ItemsControl.Template>

    </ItemsControl>

</UserControl>
