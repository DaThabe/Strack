<UserControl
    x:Class="Strack.Desktop.UI.View.Account.AccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:account="clr-namespace:Strack.Desktop.ViewModel.View.Account"
    xmlns:card="clr-namespace:Strack.Desktop.UI.View.Account.Card"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Strack.Desktop.UI.View.Account"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=account:AccountViewModel}"
    mc:Ignorable="d">

    <DockPanel>

        <DockPanel Height="60" DockPanel.Dock="Top">

            <StackPanel VerticalAlignment="Center">
                <wpfui:TextBlock
                    DockPanel.Dock="Left"
                    FontTypography="Subtitle"
                    Text="标题" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <wpfui:Button
                    Margin="5"
                    Command="{Binding DeleteCommand}"
                    Icon="{wpfui:SymbolIcon Symbol=Add24}"
                    ToolTip="添加" />

                <wpfui:Button
                    Margin="5"
                    Appearance="Primary"
                    Command="{Binding RefreshCommand}"
                    Icon="{wpfui:SymbolIcon Symbol=ArrowClockwise24}"
                    ToolTip="刷新" />

                <wpfui:Button
                    Margin="5"
                    Appearance="Danger"
                    Command="{Binding DeleteCommand}"
                    Icon="{wpfui:SymbolIcon Symbol=Delete24}"
                    ToolTip="删除" />

                <!--  行者会话  -->
                <wpfui:Button
                    Margin="0,1"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Appearance="Transparent"
                    Command="{Binding AddFromXingZheSessionCommand}">

                    <wpfui:Button.Icon>
                        <wpfui:ImageIcon
                            Width="16"
                            Height="16"
                            Source="/Asset/Image/XingZhe.png" />
                    </wpfui:Button.Icon>

                    <StackPanel>

                        <wpfui:TextBlock FontTypography="BodyStrong" Text="行者" />
                        <wpfui:TextBlock FontTypography="Caption" Text="会话Id" />

                    </StackPanel>
                </wpfui:Button>

                <!--  Igps授权  -->
                <wpfui:Button
                    Margin="0,1"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Appearance="Transparent">

                    <wpfui:Button.Icon>
                        <wpfui:ImageIcon
                            Width="16"
                            Height="16"
                            Source="/Asset/Image/igpsport.ico" />
                    </wpfui:Button.Icon>

                    <StackPanel>

                        <wpfui:TextBlock FontTypography="BodyStrong" Text="迹驰" />
                        <wpfui:TextBlock FontTypography="Caption" Text="授权码" />

                    </StackPanel>
                </wpfui:Button>

            </StackPanel>

        </DockPanel>

        <!--  账户列表  -->
        <wpfui:ListView
            d:ItemsSource="{d:SampleData ItemCount=3}"
            DockPanel.Dock="Left"
            ItemsSource="{Binding ItemsSource}">

            <wpfui:ListView.ItemTemplate>
                <DataTemplate>

                    <DockPanel Margin="5,0">

                        <!--  头像  -->
                        <wpfui:Image
                            Width="32"
                            Height="32"
                            d:Source="/Asset/logo.ico"
                            CornerRadius="5"
                            DockPanel.Dock="Left"
                            Source="{Binding AvatarSource}" />

                        <StackPanel Margin="5,0,0,0" VerticalAlignment="Center">

                            <!--  名称  -->
                            <wpfui:TextBlock
                                d:Text="Name"
                                FontTypography="BodyStrong"
                                Text="{Binding Name}" />

                            <!--  来源  -->
                            <wpfui:TextBlock
                                d:Text="@来源"
                                Appearance="Disabled"
                                FontTypography="Caption"
                                Text="{Binding Name}" />

                        </StackPanel>


                    </DockPanel>

                </DataTemplate>
            </wpfui:ListView.ItemTemplate>

        </wpfui:ListView>

        <!--选项-->
        <StackPanel DockPanel.Dock="Right">

            

        </StackPanel>
        
        <!--  活动简要列表  -->
        <WrapPanel>
            <wpfui:Button>测试</wpfui:Button>
            <wpfui:Button>测试</wpfui:Button>
            <wpfui:Button>测试</wpfui:Button>
            <wpfui:Button>测试</wpfui:Button>
            <wpfui:Button>测试</wpfui:Button>
            <wpfui:Button>测试</wpfui:Button>
        </WrapPanel>

    </DockPanel>

</UserControl>
