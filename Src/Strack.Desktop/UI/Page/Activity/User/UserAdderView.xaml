<UserControl
    x:Class="Strack.Desktop.UI.Page.Activity.User.UserAdderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Strack.Desktop.UI.Page.Activity.User"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:user="clr-namespace:Strack.Desktop.ViewModel.Page.Activity.User"
    d:DataContext="{d:DesignInstance Type=user:UserAdderViewModel}"
    d:Width="1000"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center">

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition Width="*" MaxWidth="300" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:TextBlock
            Grid.Row="0"
            Grid.Column="0"
            FontTypography="Caption"
            Text="平台" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            DockPanel.Dock="Left"
            ItemsSource="{Binding Platforms}"
            SelectedItem="{Binding SelectedPlatform}" />

        <ui:TextBlock
            Grid.Row="0"
            Grid.Column="1"
            FontTypography="Caption"
            Text="凭证" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="3"
            DockPanel.Dock="Left"
            ItemsSource="{Binding Credentials}"
            SelectedItem="{Binding SelectedCredential}" />

        <ui:TextBlock
            Grid.Row="0"
            Grid.Column="2"
            FontTypography="Caption"
            Text="凭证内容" />
        <ui:TextBox
            Grid.Row="1"
            Grid.Column="2"
            Margin="3"
            VerticalAlignment="Stretch"
            BorderThickness="0"
            PlaceholderText="点击输入凭证内容"
            Text="{Binding Content}" />

        <ui:Button
            Grid.Row="1"
            Grid.Column="3"
            Margin="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Appearance="Primary"
            Command="{Binding AddCommand}"
            Content="添加" />

    </Grid>
</UserControl>
