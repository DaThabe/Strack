<UserControl
    x:Class="Strack.Desktop.UI.View.Setting.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:Strack.Desktop.UI.Markup"
    xmlns:local="clr-namespace:Strack.Desktop.UI.View.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdxam="https://github.com/whistyun/MdXaml"
    xmlns:setting="clr-namespace:Strack.Desktop.ViewModel.View.Setting"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=setting:SettingViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>

        <TextBlock Margin="0,20,0,5" Text="项目介绍" />

        <wpfui:CardControl Header="项目地址">
            <wpfui:HyperlinkButton
                VerticalContentAlignment="Center"
                Content="Github"
                Icon="{ext:PathIcon Path={StaticResource Icon.Github}}"
                NavigateUri="https://github.com/DaThabe/Strack" />
        </wpfui:CardControl>


    </StackPanel>

</UserControl>
