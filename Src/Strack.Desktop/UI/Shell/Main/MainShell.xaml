<wpfui:FluentWindow
    x:Class="Strack.Desktop.UI.Shell.Main.MainShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Strack.Desktop.UI.Shell.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:track="clr-namespace:Strack.Desktop.UI.View.Track"
    xmlns:ui="clr-namespace:Strack.Desktop.UI"
    xmlns:view="clr-namespace:Strack.Desktop.UI.View"
    xmlns:vm="clr-namespace:Strack.Desktop.ViewModel.Shell"
    xmlns:wpfui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    x:Name="Root"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainShellViewModel}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Default"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <wpfui:TitleBar
            x:Name="TitleBar"
            Title="{Binding Title}"
            Grid.Row="0">
            <wpfui:TitleBar.Icon>
                <wpfui:ImageIcon Source="/Asset/logo.ico" />
            </wpfui:TitleBar.Icon>
        </wpfui:TitleBar>

        <!--  导航  -->
        <wpfui:NavigationView
            x:Name="NavigationControl"
            Grid.Row="1"
            Padding="10"
            BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
            FooterMenuItemsSource="{Binding FooterMenuItemsSource, Mode=OneWay}"
            MenuItemsSource="{Binding MenuItemsSource, Mode=OneWay}"
            PaneDisplayMode="LeftFluent"
            Transition="SlideBottom">

            <!--  导航标题  -->
            <wpfui:NavigationView.Header>
                <wpfui:BreadcrumbBar x:Name="BreadcrumbBar" FontSize="10" />
            </wpfui:NavigationView.Header>

            <!--  通知  -->
            <wpfui:NavigationView.ContentOverlay>
                <Grid>
                    <wpfui:SnackbarPresenter x:Name="SnackbarPresenter" />
                </Grid>
            </wpfui:NavigationView.ContentOverlay>

        </wpfui:NavigationView>

        <!--  弹窗  -->
        <ContentPresenter x:Name="DialogHost" Grid.Row="1" />

    </Grid>

</wpfui:FluentWindow>