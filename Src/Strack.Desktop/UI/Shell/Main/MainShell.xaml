<ui:FluentWindow
    x:Class="Strack.Desktop.UI.Shell.Main.MainShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Strack.Desktop.UI.Shell.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menu="clr-namespace:Strack.Desktop.ViewModel.Shell.Menu"
    xmlns:track="clr-namespace:Strack.Desktop.UI.View.Track"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    xmlns:ui1="clr-namespace:Strack.Desktop.UI"
    xmlns:vm="clr-namespace:Strack.Desktop.ViewModel.Shell"
    x:Name="Root"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainShellViewModel}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Default"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Shell/Main/Menu/MenuItemView.xaml" />
                <ResourceDictionary Source="/UI/Shell/Main/Menu/MenuListView.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </ui:FluentWindow.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <ui:TitleBar Title="{Binding Title}" Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/Asset/logo.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!--  内容  -->
        <DockPanel Grid.Row="1">

            <!--  菜单  -->
            <DockPanel
                Width="80"
                Margin="5"
                DockPanel.Dock="Left">

                <!--  页脚菜单  -->
                <ItemsControl
                    DockPanel.Dock="Bottom"
                    ItemTemplate="{StaticResource LeftFluentMenuItemDateTemplate}"
                    ItemsSource="{Binding FooterMenuItems}"
                    Style="{StaticResource MenuItemsControlStyle}" />

                <!--  菜单  -->
                <ItemsControl
                    ItemTemplate="{StaticResource LeftFluentMenuItemDateTemplate}"
                    ItemsSource="{Binding MenuItems}"
                    Style="{StaticResource MenuItemsControlStyle}" />

            </DockPanel>


            <!--  内容  -->
            <DockPanel
                MinWidth="400"
                MaxWidth="1200"
                HorizontalAlignment="Center">

                <!--  页头  -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">

                    <!--  导航深度  -->
                    <ui:BreadcrumbBar
                        Margin="5,0,0,0"
                        DockPanel.Dock="Top"
                        ItemsSource="{Binding NavigationItems, Mode=OneWay}">
                        <ui:BreadcrumbBar.ItemTemplate>
                            <DataTemplate>

                                <ui:TextBlock Text="{Binding Title}" />

                            </DataTemplate>
                        </ui:BreadcrumbBar.ItemTemplate>
                    </ui:BreadcrumbBar>



                </StackPanel>

                <!--  视图  -->
                <Grid>
                    <!--  视图  -->
                    <ContentPresenter Content="{Binding CurrentNavigationItem.Content}" />
                    <!--  弹窗  -->
                    <ContentPresenter x:Name="DialogHost" />
                    <!--  提示  -->
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
                </Grid>

            </DockPanel>

        </DockPanel>

    </Grid>

</ui:FluentWindow>