    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:activity="clr-namespace:Strack.Desktop.ViewModel.View.Dashboard.Activity"
    xmlns:cb="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:control="clr-namespace:Strack.Desktop.UI.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dashboard="clr-namespace:Strack.Desktop.ViewModel.View.Dashboard"
    xmlns:layout="clr-namespace:Strack.Desktop.ViewModel.View.Dashboard.Layout"
    xmlns:local="clr-namespace:Strack.Desktop.UI.View.Dashboard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="clr-namespace:Strack.Desktop.UI"
    d:DataContext="{d:DesignInstance Type=dashboard:DashboardViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ui:BindingProxy x:Key="BindingProxy" Data="{Binding}" />

        <Style x:Key="EditDockRadioButton" TargetType="RadioButton">

            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">

                        <Border
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#666" />
                                <Setter Property="Foreground" Value="#fff" />
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <ObjectDataProvider
            x:Key="DockEnumItemsSource"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Dock" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>


    </UserControl.Resources>

    <control:TitlePanel Header="主页">

        <control:TitlePanel.Option>
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="调整布局" IsChecked="{Binding CanEditLayout}" />
            </StackPanel>
        </control:TitlePanel.Option>

        <DockPanel>

            <!--  布局编辑  -->
            <Border
                DockPanel.Dock="Right"
                Style="{DynamicResource CardStyle}"
                Visibility="{cb:Binding CanEditLayout}">
                <ItemsControl d:ItemsSource="{d:SampleData ItemCount=3}" ItemsSource="{Binding LayoutItemsSource}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type layout:LayoutItemViewModel}">
                            <DockPanel Height="40" Margin="2">

                                <Button
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding Data.SortToNextCommand, Source={StaticResource BindingProxy}}"
                                    CommandParameter="{Binding}"
                                    Content="下"
                                    DockPanel.Dock="Right" />
                                <Button
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding Data.SortToLastCommand, Source={StaticResource BindingProxy}}"
                                    CommandParameter="{Binding}"
                                    Content="上"
                                    DockPanel.Dock="Right" />


                                <!--  对齐方式  -->
                                <ComboBox
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    ItemsSource="{Binding Source={StaticResource DockEnumItemsSource}}"
                                    SelectedItem="{Binding Dock, Mode=TwoWay}" />

                                <TextBlock VerticalAlignment="Center" Text="{Binding Title}" />

                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>

                            <StackPanel Orientation="Vertical" />

                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                </ItemsControl>
            </Border>

            <!--  布局内容  -->
            <ItemsControl d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding LayoutItemsSource}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type layout:LayoutItemViewModel}">

                        <ContentPresenter
                            Margin="2"
                            Content="{Binding Content}"
                            DockPanel.Dock="{Binding Dock}" />

                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="DockPanel.Dock" Value="{Binding Dock}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>

                        <DockPanel LastChildFill="True" />

                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

            </ItemsControl>

        </DockPanel>

    </control:TitlePanel>



