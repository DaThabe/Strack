<UserControl
    x:Class="FluentFrame.UI.View.DemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluentFrame.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:view="clr-namespace:FluentFrame.ViewModel.View"
    d:DataContext="{d:DesignInstance Type=view:DemoViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>

        <!--  通知  -->
        <ui:CardExpander Margin="3">

            <ui:CardExpander.Header>
                <DockPanel>

                    <ui:Button
                        Appearance="Primary"
                        Command="{Binding NotifyCommand}"
                        Content="Done!"
                        DockPanel.Dock="Right" />

                    <ui:TextBlock VerticalAlignment="Center" Text="通知" />
                </DockPanel>
            </ui:CardExpander.Header>

            <StackPanel>

                <ui:CardControl Padding="5" Header="标题">
                    <ui:TextBox MinWidth="100" Text="{Binding NotifyItem.Title}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="内容">
                    <ui:TextBox Text="{Binding NotifyItem.Content}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="等级">
                    <ComboBox ItemsSource="{Binding AppearanceItemsSource}" SelectedItem="{Binding NotifyItem.Appearance}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="时间">
                    <ui:TimePicker ClockIdentifier="Clock24Hour" SelectedTime="{Binding NotifyItem.Delay}" />
                </ui:CardControl>

            </StackPanel>

        </ui:CardExpander>

        <!--  消息  -->
        <ui:CardExpander Margin="3">

            <ui:CardExpander.Header>
                <DockPanel>

                    <ui:Button
                        Appearance="Primary"
                        Command="{Binding MessageCommand}"
                        Content="Done!"
                        DockPanel.Dock="Right" />

                    <ui:TextBlock VerticalAlignment="Center" Text="消息" />
                </DockPanel>
            </ui:CardExpander.Header>

            <StackPanel>

                <ui:CardControl Padding="5" Header="标题">
                    <ui:TextBox MinWidth="100" Text="{Binding MessageItem.Title}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="内容">
                    <ui:TextBox Text="{Binding MessageItem.Content}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="等级">
                    <ComboBox ItemsSource="{Binding AppearanceItemsSource}" SelectedItem="{Binding MessageItem.Appearance}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="时间">
                    <DatePicker SelectedDate="{Binding MessageItem.Time}" />
                </ui:CardControl>

            </StackPanel>

        </ui:CardExpander>

        <!--  弹窗  -->
        <ui:CardExpander Margin="3">

            <ui:CardExpander.Header>
                <DockPanel>

                    <ui:Button
                        Appearance="Primary"
                        Command="{Binding DialogCommand}"
                        Content="Done!"
                        DockPanel.Dock="Right" />

                    <ui:TextBlock VerticalAlignment="Center" Text="弹窗" />
                </DockPanel>
            </ui:CardExpander.Header>

            <StackPanel>

                <ui:CardControl Padding="5" Header="标题">
                    <ui:TextBox MinWidth="100" Text="{Binding DialogItem.Title}" />
                </ui:CardControl>

                <ui:CardControl Padding="5" Header="内容">
                    <ui:TextBox Text="{Binding DialogItem.Content}" />
                </ui:CardControl>

            </StackPanel>

        </ui:CardExpander>

    </StackPanel>
</UserControl>
